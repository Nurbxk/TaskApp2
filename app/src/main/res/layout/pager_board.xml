<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="boardIv,openBtn,boardTv,boardTv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        android:id="@+id/boardIv"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent "
        app:layout_constraintBottom_toTopOf="@+id/boardTv"
        />
    <Button
        android:id="@+id/openBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Home"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:backgroundTint="@color/black"
        />
    <TextView
        android:id="@+id/boardTv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:textStyle="bold"
        android:textSize="22sp"

        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/boardIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/boardTv2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="someting something something long long long long long text text text text text text text text text text text"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>